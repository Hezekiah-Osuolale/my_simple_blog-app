  <h2>Edit Blog</h2>

  <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
    <div class="mb-3">
      <label>Title</label>
      <input type="text" name="blog[title]" value="<%= blog.title %>" class="form-control">
    </div>

    <div class="mb-3">
      <label>Image URL</label>
      <input type="text" name="blog[image]" value="<%= blog.image %>" class="form-control">
    </div>

    <div class="mb-3">
      <label>Content</label>
      <textarea name="blog[body]" class="form-control" rows="5"><%= blog.body %></textarea>
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a href="/blogs/<%= blog._id %>" class="btn btn-secondary">Cancel</a>
  </form>



