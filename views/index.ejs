<h1 class="mb-4">Recent Posts</h1>
<div class="row">
  <% blogs.forEach(blog => { %>
    <div class="col-md-4">
      <div class="card mb-4">
        <% if (blog.image) { %>
          <img src="/uploads/<%= blog.image %>" alt="Blog Image" class="img-fluid">
        <% } %>
        <div class="card-body">
          <h5>
            <a href="/blogs/<%= blog._id %>" class="blog-title"><%= blog.title %></a>
          </h5>
          <p class="card-text"><%= blog.body.substring(0, 120) %>...</p>
          <a href="/blogs/<%= blog._id %>" class="btn btn-primary btn-sm">Read More</a>
        </div>
      </div>
    </div>
  <% }) %>
</div>
