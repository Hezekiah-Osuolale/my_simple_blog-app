

<div class="card">
  <div class="card-body">
    <h2><%= blog.title %></h2>
    <% if (blog.image) { %>
      <img src="/uploads/<%= blog.image %>" alt="Blog Image" class="img-fluid">
    <% } %>
    
    <p><%= blog.body %></p>
    <div class="mt-3">
      <a href="/blogs" class="btn btn-secondary">Back</a>

      <% if (user && blog.author._id.toString() === user._id.toString()) { %>
        <a href="/blogs/<%= blog._id %>/edit" class="btn btn-warning">Edit</a>
        <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" style="display:inline;">
          <button class="btn btn-danger">Delete</button>
        </form>
      <% } %>

    </div>
  </div>
</div>



